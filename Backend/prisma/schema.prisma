generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String    @db.VarChar(100)
  email         String    @unique(map: "email") @db.VarChar(255)
  password      String    @db.VarChar(2083)
  short_bio     String?   @db.VarChar(160)
  avatar        String?   @db.VarChar(2083)
  isActive      Int?      @default(0) @db.TinyInt
  isBlacklisted Int?      @default(0) @db.TinyInt
  domain        String    @unique(map: "domain") @db.VarChar(255)
  about         String?   @db.VarChar(250)
  created_at    DateTime? @default(dbgenerated("(now())")) @db.Timestamp(0)
  isPremium     Int?      @default(0) @db.TinyInt
}
